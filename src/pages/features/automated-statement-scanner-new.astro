---
import FeaturePageLayout from '../../components/layouts/FeaturePageLayout.astro';
import { featurePages } from '../../data/featurePagesData';

const pageData = featurePages['automated-statement-scanner'];
---

<FeaturePageLayout {...(pageData as any)}>
  <!-- Custom Pricing Section for this specific feature -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Pay only for what you use.</h2>
        <p class="text-lg text-gray-600">Simple, transparent pricing that grows with you. First 3 statements are free.</p>
      </div>
      
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <!-- Left Column - Pricing Card -->
          <div class="bg-white border-2 border-investipal-600 rounded-lg p-8">
            <div class="mb-4">
              <span class="bg-investipal-600 text-white px-3 py-1 rounded-full text-sm font-medium">Usage-based</span>
              <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium ml-2">Popular</span>
            </div>
            <div class="mb-6">
              <span class="text-4xl font-bold text-gray-900">$15</span>
              <span class="text-lg text-gray-600">/statement</span>
            </div>
            <p class="text-gray-600 mb-8">Our most popular plan for advisory teams. Get in touch for customized pricing for large firms.</p>
            
            <div class="text-left space-y-3 mb-8">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">PDF Brokerage Statements</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Image Scans</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Portfolio Analysis</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Data Export into CSV</span>
              </div>
            </div>
            
            <a href="/book-a-demo" class="bg-investipal-600 hover:bg-investipal-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors duration-200 w-full text-center block">
              Schedule a Demo
            </a>
          </div>

          <!-- Right Column - Benefits List -->
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-6">What's included</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-investipal-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Multi-format Support</div>
                  <div class="text-gray-600 text-sm">Works with PDFs, images, and scanned documents from any major brokerage</div>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-investipal-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">99.9% Accuracy Rate</div>
                  <div class="text-gray-600 text-sm">AI-powered extraction with human-level accuracy for all data points</div>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-investipal-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Instant Portfolio Analysis</div>
                  <div class="text-gray-600 text-sm">Get immediate insights on asset allocation, risk metrics, and performance</div>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-investipal-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Flexible Export Options</div>
                  <div class="text-gray-600 text-sm">Download data in CSV, Excel, or integrate directly with your existing tools</div>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-investipal-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Bank-Grade Security</div>
                  <div class="text-gray-600 text-sm">SOC 2 compliant with end-to-end encryption for all client data</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</FeaturePageLayout>
