  "@type": "ContactPage",
  "name": title,
  "description": description,
  "url": canonical,
  "mainEntity": {
    "@type": "Organization",
    "name": "Investipal",
    "description": "AI-powered wealth management platform for financial advisors",
    "url": "https://investipal.co",
    "contactPoint": {
      "@type": "ContactPoint",
