---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeroSection from '../components/sections/PageHeroSection.astro';
import CookieBanner from '../components/ui/CookieBanner.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import TableOfContents from '../components/blog/TableOfContents.astro';
import CTASection from '../components/sections/CTASection.astro';
import { designSystem } from '../data/designSystem';

// SEO Metadata
const title = "Terms & Conditions | Investipal";
const description = "Read Investipal's Terms and Conditions. Important legal information about using our AI-powered wealth management platform and website.";
const canonical = "https://investipal.co/terms-conditions";

// Page Data
const pageData = {
  hero: {
    audienceText: "Legal Information",
    title: "Terms & Conditions",
    subtitle: "Important legal information about using Investipal's website and services. Please read these terms carefully before using our platform."
  },
  lastUpdated: "June 27, 2025"
};

// Generate table of contents headings for the standardized component
const headings = [
  { depth: 2, slug: "agreement", text: "Agreement" },
  { depth: 2, slug: "modifications", text: "Modifications" },
  { depth: 2, slug: "investment-advice", text: "Investment Information" },
  { depth: 2, slug: "disclaimers", text: "Disclaimers" },
  { depth: 2, slug: "risk-disclosure", text: "Risk Disclosure" },
  { depth: 2, slug: "hypothetical-performance", text: "Hypothetical Performance" },
  { depth: 2, slug: "third-party-funds", text: "Third Party Funds" },
  { depth: 2, slug: "warranty-disclaimer", text: "Warranty Disclaimer" },
  { depth: 2, slug: "accuracy", text: "Accuracy" },
  { depth: 2, slug: "limitation-liability", text: "Limitation of Liability" },
  { depth: 2, slug: "indemnification", text: "Indemnification" },
  { depth: 2, slug: "governing-law", text: "Governing Law" }
];

// Generate structured data for Terms & Conditions
const siteUrl = Astro.site?.toString() || 'https://investipal.co';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();

const termsStructuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Terms & Conditions",
  "description": description,
  "url": currentUrl,
  "publisher": {
    "@type": "Organization",
    "name": "Investipal Inc.",
    "url": siteUrl
  },
  "dateModified": "2025-06-27",
  "inLanguage": "en-US",
  "about": {
    "@type": "Thing",
    "name": "Terms of Service"
  }
};

// Generate breadcrumb items
const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Terms & Conditions' }
];
---

<Layout title={title} description={description} canonical={canonical}>
  <!-- Terms & Conditions Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(termsStructuredData)} />
  
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  
  <main id="main">
    
    <!-- Hero Section -->
    <PageHeroSection 
      audienceText={pageData.hero.audienceText}
      title={pageData.hero.title}
      subtitle={pageData.hero.subtitle}
    />

    <!-- Terms Content -->
    <section class="bg-white py-20">
      <div class={designSystem.spacing.container}>
        <article class="prose prose-lg max-w-none">
          
          <div class="mb-8 p-4 bg-gray-50 rounded-lg border border-gray-200">
            <p class={`text-sm ${designSystem.text.secondary} mb-2`}>
              <strong>Last Updated:</strong> {pageData.lastUpdated}
            </p>
            <p class={`text-sm ${designSystem.text.secondary}`}>
              <strong>Contact:</strong> For questions about these terms, contact us at 
              <a href="mailto:info@investipal.co" class={designSystem.links.primary}>info@investipal.co</a>
            </p>
          </div>

          <ol class="space-y-6 [counter-reset:item] list-none">
            <li class="[counter-increment:item] before:content-[counter(item)'.'] before:font-bold before:text-investipal-600 before:mr-3">
              These terms and conditions are an agreement between you and Investipal Inc. ("<strong>Investipal</strong>," "<strong>we</strong>," or "<strong>our</strong>") and set forth the terms by which you may access and use investipal.co. By accessing this website (the "<strong>Site</strong>"), you acknowledge these terms and conditions of use and agree to be bound by them. If you do not agree to these terms, please discontinue accessing the Site immediately.
            </li>

