---
// Podcast Page Layout Component
// Provides consistent styling and structure for all podcast episodes
// Based on the live Investipal podcast page structure

import Layout from '../../layouts/Layout.astro';
import Header from '../Header.astro';
import Footer from '../Footer.astro';
import CTASection from '../sections/CTASection.astro';
import CookieBanner from '../ui/CookieBanner.astro';
import Breadcrumb from '../ui/Breadcrumb.astro';
import StandardBadge from '../ui/StandardBadge.astro';
import type { PodcastEpisode } from '../../data/podcastData';

export interface Props {
  episode: PodcastEpisode;
  relatedEpisodes?: PodcastEpisode[];
}

const { episode, relatedEpisodes = [] } = Astro.props;

// Format date for display
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};

// Extract Spotify episode ID from URL
const getSpotifyEpisodeId = (url: string) => {
  const match = url.match(/episode\/([a-zA-Z0-9]+)/);
  return match ? match[1] : null;
};

// Normalize YouTube embed src regardless of URL format
const toYouTubeEmbedSrc = (url: string) => {
  if (!url) return '';
  if (/youtube\.com\/embed\//.test(url)) return url;
  const m = url.match(/(?:v=|youtu\.be\/|embed\/)([A-Za-z0-9_-]{6,})/);
  return m ? `https://www.youtube.com/embed/${m[1]}` : '';
};

const spotifyEpisodeId = getSpotifyEpisodeId(episode.spotifyUrl);
const youtubeEmbedSrc = toYouTubeEmbedSrc(episode.youtubeUrl);

// Generate structured data
const siteUrl = Astro.site?.toString() || 'https://investipal.co';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();

const podcastStructuredData = {
  "@context": "https://schema.org",
  "@type": "PodcastEpisode",
  "name": episode.title,
  "description": episode.seoDescription,
  "url": currentUrl,
  "datePublished": episode.publishedDate.toISOString(),
  "duration": `PT${episode.duration.replace(':', 'M')}S`,
  "image": episode.thumbnailImage,
  "associatedMedia": [
    {
      "@type": "MediaObject",
      "contentUrl": episode.spotifyUrl,
      "encodingFormat": "audio/mpeg"
    },
    {
      "@type": "VideoObject",
      "contentUrl": episode.youtubeUrl,
      "encodingFormat": "video/mp4"
    }
  ],
  "partOfSeries": {
    "@type": "PodcastSeries",
    "name": "The Investipal Podcast",
    "url": `${siteUrl}/podcasts`
  },
  "publisher": {
    "@type": "Organization",
    "name": "Investipal",
    "url": siteUrl,
    "logo": `${siteUrl}/images/logo.png`
  }
};

// Generate breadcrumb items
const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Podcasts', href: '/podcasts' },
  { name: episode.title }
];
---

<Layout 
  title={`${episode.title} | The Investipal Podcast`} 
  description={episode.seoDescription}
  keywords={episode.keywords.join(', ')}
>
  <!-- Podcast Episode Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(podcastStructuredData)} />
  
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  
  <main id="main">
    
    <!-- Podcast Episode Hero Section -->
    <section class="relative bg-gradient-to-br from-violet-100 via-purple-50 to-indigo-100 pb-12 md:pb-16 pt-16 md:pt-20 overflow-hidden">
      <!-- Subtle animated background elements -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-yellow-200/30 to-orange-300/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-green-200/30 to-blue-300/20 rounded-full blur-2xl animate-bounce"></div>
      
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Category Badge -->
        <div class="mb-6">
          <StandardBadge text={episode.category} variant="featured" />
        </div>

        <!-- Episode Title -->
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight mb-6">
          {episode.title}
        </h1>

        <!-- Episode Description (fallbacks if guest not provided) -->
        <p class="text-xl text-gray-600 leading-relaxed mb-8 max-w-3xl">
          {episode.guest?.name ? `Join us for a conversation with ${episode.guest.name}${episode.guest.title ? ", " + episode.guest.title : ''}${episode.guest.company ? " at " + episode.guest.company : ''}.` : episode.seoDescription}
        </p>

        <!-- Episode Meta Information -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between border-t border-b border-gray-200 py-6 mb-8">
                  <div class="flex items-center space-x-4 mb-4 sm:mb-0">
          <!-- Podcast Guest Info -->
          {episode.guest?.name && (
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-gray-900">Guest: {episode.guest.name}</p>
              {(episode.guest.title || episode.guest.company) && (
                <p class="text-sm text-orange-600">{episode.guest.title}{episode.guest.company ? ` at ${episode.guest.company}` : ''}</p>
              )}
            </div>
          </div>
          )}
        </div>

          <!-- Episode Details -->
          <div class="flex items-center space-x-6 text-sm text-gray-500">
            <div class="flex items-center space-x-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>{formatDate(episode.publishedDate)}</span>
            </div>
            
            <div class="flex items-center space-x-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>{episode.duration}</span>
            </div>
          </div>
        </div>

        <!-- Topics Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {episode.topics.map((topic) => (
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-700 hover:bg-violet-100 hover:text-violet-700 transition-colors">
              #{topic}
            </span>
          ))}
        </div>

        <!-- Media Players Section -->
        <div class="space-y-8 mb-12">
          
          <!-- Spotify Player -->
          {spotifyEpisodeId && (
            <div class="w-full max-w-4xl mx-auto">
              <iframe 
                src={`https://open.spotify.com/embed/episode/${spotifyEpisodeId}?utm_source=generator&theme=0`}
                width="100%" 
                height="352" 
                frameborder="0" 
                allowfullscreen="" 
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                loading="lazy"
                class="rounded-xl shadow-lg">
              </iframe>
            </div>
          )}
          
          <!-- YouTube Player -->
          {youtubeEmbedSrc && (
            <div class="w-full max-w-4xl mx-auto">
              <div class="relative aspect-video rounded-xl overflow-hidden shadow-lg">
                <iframe 
                  src={youtubeEmbedSrc}
                  title={episode.title}
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                  allowfullscreen
                  class="absolute inset-0 w-full h-full">
                </iframe>
              </div>
            </div>
          )}
          
        </div>

      </div>
    </section>

    <!-- Episode Content Section -->
    <section class="bg-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Episode Description -->
        <div class="prose prose-lg max-w-none mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">About This Episode</h2>
          <div class="text-gray-700 leading-relaxed" set:html={episode.description}></div>
        </div>

        <!-- Guest Bio Section -->
        {episode.guest?.name && (
        <div class="bg-gradient-to-r from-orange-50 to-red-50 rounded-xl p-8 mb-12 border border-orange-100">
          <div class="flex items-start space-x-4">
            <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Meet Our Podcast Guest</h3>
              <p class="text-sm text-orange-700 font-medium mb-1">{episode.guest.name}</p>
              {(episode.guest.title || episode.guest.company) && (
                <p class="text-sm text-gray-600 mb-4">{episode.guest.title}{episode.guest.company ? ` at ${episode.guest.company}` : ''}</p>
              )}
              {episode.guest.bio && (<div class="text-gray-600 leading-relaxed mb-6" set:html={episode.guest.bio}></div>)}
              
              <!-- Guest Links -->
              {(episode.guest.linkedIn || episode.guest.twitter || episode.guest.website) && (
                <div class="flex flex-wrap gap-3">
                  {episode.guest.linkedIn && (
                    <a href={episode.guest.linkedIn} target="_blank" rel="noopener" class="inline-flex items-center px-3 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors">
                      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                      LinkedIn
                    </a>
                  )}
                  {episode.guest.twitter && (
                    <a href={episode.guest.twitter} target="_blank" rel="noopener" class="inline-flex items-center px-3 py-2 bg-blue-500 text-white text-sm rounded-lg hover:bg-blue-600 transition-colors">
                      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                      </svg>
                      Twitter
                    </a>
                  )}
                  {episode.guest.website && (
                    <a href={episode.guest.website} target="_blank" rel="noopener" class="inline-flex items-center px-3 py-2 bg-gray-600 text-white text-sm rounded-lg hover:bg-gray-700 transition-colors">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                      </svg>
                      Website
                    </a>
                  )}
                </div>
              )}
            </div>
          </div>
        </div>
        )}

      </div>
    </section>

    <!-- Related Episodes Section -->
    {relatedEpisodes.length > 0 && (
      <section class="bg-gray-50 py-16">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">More Episodes</h2>
            <p class="text-lg text-gray-600">Other conversations from The Investipal Podcast</p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedEpisodes.map((relatedEpisode) => (
              <article class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group border border-gray-200 hover:border-violet-300">
                <div class="relative">
                  <a href={`/podcasts/${relatedEpisode.slug}`} class="episode-card-link">
                    <img 
                      src={relatedEpisode.thumbnailImage} 
                      alt={relatedEpisode.thumbnailAlt}
                      class="w-full h-48 object-cover group-hover:scale-105 transition-all duration-700 ease-out"
                      loading="lazy"
                    />
                  </a>
                  <div class="absolute top-4 left-4">
                    <StandardBadge text={relatedEpisode.category} variant="category" />
                  </div>
                  <div class="absolute bottom-4 right-4">
                    <span class="inline-flex items-center bg-black/70 backdrop-blur-sm text-white px-3 py-1 rounded-full text-sm">
                      {relatedEpisode.duration}
                    </span>
                  </div>
                </div>
                
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-3 line-clamp-2 leading-tight">
                    <a href={`/podcasts/${relatedEpisode.slug}`} class="episode-card-link hover:text-violet-600 transition-colors">
                      {relatedEpisode.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-2 leading-relaxed text-sm">
                    with {relatedEpisode.guest.name}
                  </p>
                  
                  <div class="flex items-center justify-between text-sm">
                    <div class="flex items-center space-x-3">
                      <div>
                        <p class="font-medium text-gray-900">Episode</p>
                        <p class="text-gray-500">{formatDate(relatedEpisode.publishedDate)}</p>
                      </div>
                    </div>
                    <span class="text-violet-600 font-medium">{relatedEpisode.duration}</span>
                  </div>
                </div>
              </article>
            ))}
          </div>
          
          <div class="text-center mt-12">
            <a href="/podcasts" class="inline-flex items-center text-violet-600 font-semibold hover:text-violet-700 transition-colors">
              View All Episodes
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <CTASection />

  </main>
  
  <Footer />
  <CookieBanner />
</Layout>

<style>
  /* Custom prose styling for episode content */
  .prose {
    max-width: none;
  }
  
  .prose h1, .prose h2, .prose h3 {
    color: #111827;
    font-weight: 700;
  }
  
  .prose a {
    color: #7c3aed;
    text-decoration: none;
  }
  
  .prose a:hover {
    color: #6d28d9;
    text-decoration: underline;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }
  
  .prose strong {
    font-weight: 600;
    color: #374151;
  }
  
  /* Responsive iframe container */
  .aspect-video {
    aspect-ratio: 16 / 9;
  }
  
  /* Smooth transitions for all interactive elements */
  * {
    transition-property: transform, opacity, filter, box-shadow, background-color, border-color, color;
    transition-duration: 300ms;
    transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
    }
  }
</style>
