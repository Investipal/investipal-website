---
// Feature Page Layout Component
// Standardizes the layout for all feature pages

import Layout from '../../layouts/Layout.astro';
import Header from '../Header.astro';
import Footer from '../Footer.astro';
import TrustedBySection from '../sections/TrustedBySection.astro';
import SecuritySection from '../sections/SecuritySection.astro';
import TestimonialSection from '../sections/TestimonialSection.astro';
import CTASection from '../sections/CTASection.astro';
import CookieBanner from '../ui/CookieBanner.astro';
import Breadcrumb from '../ui/Breadcrumb.astro';
import StandardButton from '../ui/StandardButton.astro';
import PageHeroSection from '../sections/PageHeroSection.astro';


export interface Props {
  // Hero Section
  audienceText: string; // e.g., "For Advisors & Planners"
  featureName: string; // e.g., "Automated Statement Scanner"
  title: string; // Main hero title
  subtitle: string; // Hero subtitle/description
  heroImage: string; // Hero image URL
  heroImageAlt: string; // Alt text for hero image

  // Features Section (2x2 grid)
  features: Array<{
    icon: string; // SVG icon as string
    title: string;
    description: string;
  }>;
  dashboardImage: string; // Dashboard image URL
  dashboardImageAlt: string; // Alt text for dashboard image

  // Productivity Section
  productivityTitle: string;
  productivityDescription: string;
  stats: Array<{
    value: string;
    label: string;
  }>;

  // SEO Meta
  pageTitle: string;
  pageDescription: string;
  keywords?: string;
}

const {
  audienceText,
  featureName,
  title,
  subtitle,
  heroImage,
  heroImageAlt,
  features,
  dashboardImage,
  dashboardImageAlt,
  productivityTitle,
  productivityDescription,
  stats,
  pageTitle,
  pageDescription,
  keywords
} = Astro.props;

// Generate structured data for the feature
const siteUrl = Astro.site?.toString() || 'https://investipal.co';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();

const featureStructuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": featureName,
  "applicationCategory": "FinanceApplication",
  "applicationSubCategory": getSubCategory(featureName),
  "description": subtitle,
  "featureList": features.map(f => f.title),
  "screenshot": dashboardImage,
  "operatingSystem": "Web Browser",
  "url": currentUrl,
  "provider": {
    "@type": "Organization",
    "name": "Investipal",
    "url": siteUrl
  },
  "offers": {
    "@type": "Offer",
    "description": "Professional financial advisor software solution",
    "availability": "https://schema.org/InStock"
  }
};

function getSubCategory(featureName: string): string {
  const categoryMap: Record<string, string> = {
    'Automated Statement Scanner': 'Document Processing Software',
    'Portfolio Creation': 'Portfolio Management Software',
    'Automated Lead Nuturing': 'Customer Relationship Management',
    'Sales Enablement Platform': 'Sales Automation Software',
    'Regulation Best Interest (Reg BI) Generator': 'Compliance Software',
    'Investment Policy Statement Generator': 'Compliance Software',
    'Risk Insights': 'Risk Management Software',
    'Custom Security Builder': 'Investment Management Software'
  };
  return categoryMap[featureName] || 'Financial Software';
}

// Generate breadcrumb items
const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Features', href: '/features' },
  { name: featureName }
];


---

<Layout title={pageTitle} description={pageDescription} keywords={keywords}>
  <!-- Feature Structured Data - SoftwareApplication Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(featureStructuredData)} />
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  <main id="main">
    
    <!-- Hero Section with Image - Using Standardized Component -->
    <PageHeroSection 
      audienceText={audienceText}
      featureName={featureName}
      title={title}
      subtitle={subtitle}
      heroImage={heroImage}
      heroImageAlt={heroImageAlt}
    />

    <!-- Trusted By Section -->
    <TrustedBySection />

    <!-- Features + Dashboard Section - 2x2 Grid Layout -->
    <section class="bg-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Left Side - 2x2 Features Grid -->
          <div>
            <div class="grid grid-cols-2 gap-8">
              {features.map((feature) => (
                <div class="text-left">
                  <div class="inline-flex items-center justify-center w-12 h-12 bg-investipal-100 rounded-lg shadow-lg hover:scale-[1.02] transition-all duration-500 ease-out mb-4">
                    <svg class="w-5 h-5 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={feature.icon}>
                    </svg>
                  </div>
                  <h4 class="text-xl md:text-2xl font-semibold text-gray-900 leading-tight mb-2">{feature.title}</h4>
                  <p class="text-gray-600 text-base leading-relaxed">{feature.description}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Right Side - Dashboard Image -->
          <div>
            <img src={dashboardImage} alt={dashboardImageAlt} class="w-full rounded-lg shadow-xl" loading="lazy">
          </div>
        </div>
      </div>
    </section>

    <!-- Productivity Section - Contained with gradient background -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative bg-gradient-to-br from-investipal-600 via-investipal-700 to-investipal-800 rounded-2xl lg:rounded-3xl p-8 lg:p-12 xl:p-16 overflow-hidden">
          <!-- Background pattern/decoration -->
          <div class="absolute inset-0 bg-gradient-to-r from-investipal-600/20 to-transparent"></div>
          <div class="absolute top-0 right-0 w-96 h-96 bg-investipal-500/10 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
          <div class="absolute bottom-0 left-0 w-96 h-96 bg-investipal-400/10 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
          
          <div class="relative">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
              <!-- Left Column -->
              <div>
                <div class="inline-flex items-center bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 mb-6">
                  <div class="w-2 h-2 bg-white rounded-full mr-3 animate-pulse"></div>
                  <span class="text-sm font-medium text-white">Productivity</span>
                </div>
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 leading-tight">
                  {productivityTitle}
                </h2>
              </div>
              
              <!-- Right Column -->
              <div>
                <p class="text-investipal-100 text-lg mb-8 leading-relaxed">{productivityDescription}</p>
                
                <div class="grid grid-cols-2 gap-6 mb-10">
                  {stats.map((stat) => (
                    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300 transform hover:scale-105">
                      <div class="text-5xl font-bold text-white mb-3 bg-gradient-to-r from-white to-investipal-100 bg-clip-text text-transparent">
                        {stat.value}
                      </div>
                      <div class="text-investipal-100 leading-relaxed">{stat.label}</div>
                    </div>
                  ))}
                </div>
                
                <StandardButton variant="white">Schedule a Demo</StandardButton>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Sections Slot -->
    <slot />

    <!-- Related Solutions Section -->
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Perfect for Your Practice</h2>
          <p class="text-lg text-gray-600">Discover how different financial professionals use this feature</p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a href="/segments/financial-planners" class="group bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <div class="w-10 h-10 bg-investipal-100 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-investipal-600 transition-colors">Financial Planners</h3>
            </div>
            <p class="text-sm text-gray-600">Streamline planning workflows and enhance client proposals</p>
          </a>
          
          <a href="/segments/wealth-managers" class="group bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <div class="w-10 h-10 bg-investipal-100 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-investipal-600 transition-colors">Wealth Managers</h3>
            </div>
            <p class="text-sm text-gray-600">Scale operations and optimize portfolio management</p>
          </a>
          
          <a href="/segments/wealth-firms" class="group bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <div class="w-10 h-10 bg-investipal-100 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-investipal-600 transition-colors">Wealth Firms</h3>
            </div>
            <p class="text-sm text-gray-600">Enterprise solutions for firm-wide efficiency</p>
          </a>
          
          <a href="/segments/insurance" class="group bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <div class="w-10 h-10 bg-investipal-100 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-investipal-600 transition-colors">Insurance Advisors</h3>
            </div>
            <p class="text-sm text-gray-600">Specialized tools for insurance and annuity planning</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Standard Footer Sections -->
    <SecuritySection />
    <TestimonialSection />
    <CTASection />

  </main>
  <Footer />
  <CookieBanner />
</Layout>


