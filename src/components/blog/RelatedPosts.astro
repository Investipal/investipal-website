---
import { getCollection } from 'astro:content';
import StandardButton from '../ui/StandardButton.astro';

export interface Props {
  currentSlug: string;
  currentCategory?: string;
  currentTags?: string[];
}

const { currentSlug, currentCategory, currentTags = [] } = Astro.props;

// Get all blog posts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Filter out current post and get related posts
const otherPosts = allPosts.filter(post => post.slug !== currentSlug);

// Score posts based on relevance
const scoredPosts = otherPosts.map(post => {
  let score = 0;
  
  // Higher score for same category
  if (currentCategory && post.data.category === currentCategory) {
    score += 10;
  }
  
  // Score for matching tags
  const matchingTags = currentTags.filter(tag => 
    post.data.tags?.includes(tag)
  ).length;
  score += matchingTags * 5;
  
  // Bonus for featured posts
  if (post.data.featured) {
    score += 3;
  }
  
  // Bonus for recent posts (within last 90 days)
  const postDate = new Date(post.data.publishedDate);
  const now = new Date();
  const daysDiff = (now.getTime() - postDate.getTime()) / (1000 * 60 * 60 * 24);
  if (daysDiff <= 90) {
    score += 2;
  }
  
  return { post, score };
});

// Sort by score and take top 3
const relatedPosts = scoredPosts
  .sort((a, b) => b.score - a.score)
  .slice(0, 3)
  .map(item => item.post);

// If we don't have 3 related posts, fill with most recent
if (relatedPosts.length < 3) {
  const recentPosts = otherPosts
    .filter(post => !relatedPosts.includes(post))
    .sort((a, b) => new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime())
    .slice(0, 3 - relatedPosts.length);
  
  relatedPosts.push(...recentPosts);
}

// Format dates
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(new Date(date));
};
---

{relatedPosts.length > 0 && (
  <section class="related-posts-section">
    <div class="related-posts-container">
      <div class="related-posts-header">
        <h2 class="related-posts-title">More Articles</h2>
        <p class="related-posts-subtitle">Continue exploring our insights on financial technology and wealth management</p>
      </div>
      
      <div class="related-posts-grid">
        {relatedPosts.map((post) => (
          <article class="related-post-card">
            <a href={`/blog/${post.slug}`} class="related-post-link">
              <div class="related-post-image">
                <img 
                  src={post.data.featuredImage} 
                  alt={post.data.featuredImageAlt || post.data.title}
                  loading="lazy"
                />
                <div class="related-post-category">
                  {post.data.category}
                </div>
              </div>
              
              <div class="related-post-content">
                <h3 class="related-post-title">{post.data.title}</h3>
                <p class="related-post-excerpt">{post.data.excerpt}</p>
                
                <div class="related-post-meta">
                  <div class="related-post-author">
                    <img 
                      src={post.data.authorImage} 
                      alt={post.data.author}
                      class="related-post-author-image"
                    />
                    <span class="related-post-author-name">{post.data.author}</span>
                  </div>
                  
                  <div class="related-post-details">
                    <time class="related-post-date">
                      {formatDate(post.data.publishedDate)}
                    </time>
                    <span class="related-post-reading-time">
                      {post.data.readingTime} min read
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
      
      <div class="related-posts-footer">
        <StandardButton href="/blog" variant="primary" size="medium">
          View All Articles
        </StandardButton>
      </div>
    </div>
  </section>
)}

<style>
  .related-posts-section {
    margin: 2rem 0 0 0;
    padding: 2rem 0;
    border-top: 1px solid #e5e7eb;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  }

  .related-posts-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .related-posts-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .related-posts-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-posts-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .related-post-card {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    border: 1px solid #f3f4f6;
  }

  .related-post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .related-post-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .related-post-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .related-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .related-post-card:hover .related-post-image img {
    transform: scale(1.05);
  }

  .related-post-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(124, 58, 237, 0.9);
    color: #ffffff;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-post-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    height: calc(100% - 200px);
  }

  .related-post-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
    line-height: 1.4;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-post-excerpt {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .related-post-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .related-post-author-image {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    object-fit: cover;
  }

  .related-post-author-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-post-details {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: #6b7280;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .related-post-date,
  .related-post-reading-time {
    white-space: nowrap;
  }

  .related-posts-footer {
    text-align: center;
  }



  /* Mobile Responsive */
  @media (max-width: 768px) {
    .related-posts-section {
      margin: 1.5rem 0 0 0;
      padding: 1.5rem 0;
    }

    .related-posts-container {
      padding: 0 1rem;
    }

    .related-posts-title {
      font-size: 1.875rem;
    }

    .related-posts-subtitle {
      font-size: 1rem;
    }

    .related-posts-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .related-post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .related-post-details {
      gap: 0.75rem;
    }
  }

  /* Dark mode styles */
  :global(body.reading-mode) .related-posts-section {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
    border-top-color: #374151;
  }

  :global(body.reading-mode) .related-posts-title {
    color: #ffffff;
  }

  :global(body.reading-mode) .related-posts-subtitle {
    color: #9ca3af;
  }

  :global(body.reading-mode) .related-post-card {
    background: #1f2937;
    border-color: #374151;
  }

  :global(body.reading-mode) .related-post-title {
    color: #ffffff;
  }

  :global(body.reading-mode) .related-post-excerpt {
    color: #d1d5db;
  }

  :global(body.reading-mode) .related-post-author-name {
    color: #e5e7eb;
  }

  :global(body.reading-mode) .related-post-details {
    color: #9ca3af;
  }

  :global(body.reading-mode) .related-post-card:hover {
    background: #374151;
  }
</style>
