---
import { navigationData } from '../data/navigationData';
import StandardButton from './ui/StandardButton.astro';
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200" transition:persist>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img 
          src="https://c.animaapp.com/medefhqzj4Kk73/assets/6668e3b171e3a42c69ea29a0_investipal_logo_master_Primary-no_margin.svg" 
          alt="Investipal" 
          class="h-8"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <!-- Segments Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium py-2">
            <span>Segments</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-80 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="p-4">
              <div class="grid grid-cols-1 gap-2">
                {navigationData.segments.map((segment) => (
                  <a 
                    href={segment.href} 
                    class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                  >
                    <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-4 h-4 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={segment.icon}>
                      </svg>
                    </div>
                    <div>
                      <div class="font-medium text-gray-900">{segment.title}</div>
                      <div class="text-sm text-gray-600">{segment.description}</div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Features Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium py-2">
            <span>Features</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-96 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="p-4">
              <div class="grid grid-cols-1 gap-2">
                {navigationData.featureGroups.map((group) => (
                  <div class="relative group/item">
                    <a 
                      href="#" 
                      class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                    >
                      <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-4 h-4 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={group.icon}>
                        </svg>
                      </div>
                      <div class="flex-1 min-w-0">
                        <div class="font-medium text-gray-900">{group.title}</div>
                        <div class="text-sm text-gray-600">{group.description}</div>
                      </div>
                      <svg class="w-4 h-4 text-gray-400 group-hover/item:text-gray-600 transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                    
                    <!-- Submenu for each group -->
                    <div class="absolute left-full top-0 ml-2 w-96 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover/item:opacity-100 group-hover/item:visible transition-all duration-200 z-50">
                      <div class="p-4">
                        <div class="text-sm font-medium text-gray-900 mb-3">{group.title}</div>
                        <div class="space-y-2">
                          {group.features.map((feature) => (
                            <a 
                              href={feature.href} 
                              class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                            >
                              <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-4 h-4 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={feature.icon}>
                                </svg>
                              </div>
                              <div class="flex-1 min-w-0">
                                <div class="font-medium text-gray-900">{feature.title}</div>
                                <div class="text-sm text-gray-600 leading-relaxed">{feature.description}</div>
                              </div>
                            </a>
                          ))}
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
                
                <!-- How It Works Link at Bottom -->
                <div class="border-t border-gray-200 mt-2 pt-2">
                  <a 
                    href="/how-it-works" 
                    class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                  >
                    <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-4 h-4 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="font-medium text-gray-900">How It Works</div>
                      <div class="text-sm text-gray-600">See our complete workflow in action</div>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Resources Dropdown (2-column with Learning & Company) -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium py-2">
            <span>Resources</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-[520px] bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="p-6">
              <div class="grid grid-cols-2 gap-6">
                <!-- Learning Column -->
                <div>
                  <h3 class="text-sm font-semibold text-gray-900 mb-3">Learning</h3>
                  <div class="space-y-2">
                    {navigationData.resources.learning.map((resource) => (
                      <a 
                        href={resource.href} 
                        class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                      >
                        <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                          <svg class="w-4 h-4 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={resource.icon}>
                          </svg>
                        </div>
                        <div>
                          <div class="font-medium text-gray-900">{resource.title}</div>
                          <div class="text-sm text-gray-600">{resource.description}</div>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
                
                <!-- Company Column -->
                <div>
                  <h3 class="text-sm font-semibold text-gray-900 mb-3">Company</h3>
                  <div class="space-y-2">
                    {navigationData.resources.company.map((item) => (
                      <a 
                        href={item.href} 
                        class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                      >
                        <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                          <svg class="w-4 h-4 text-investipal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={item.icon}>
                          </svg>
                        </div>
                        <div>
                          <div class="font-medium text-gray-900">{item.title}</div>
                          <div class="text-sm text-gray-600">{item.description}</div>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>


      </nav>

      <!-- Desktop CTA Buttons -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="https://app.investipal.co/" class="text-gray-600 hover:text-gray-900 font-medium">
          Log in
        </a>
        <StandardButton size="small">Schedule a Demo</StandardButton>
      </div>

      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-gray-700 hover:text-gray-900 hover:bg-gray-100"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200">
    <div class="px-4 py-6 space-y-4">
      <!-- Mobile Segments -->
      <div>
        <div class="text-sm font-medium text-gray-500 tracking-wider mb-3">Segments</div>
        <div class="space-y-2">
          {navigationData.segments.map((segment) => (
            <a 
              href={segment.href} 
              class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
            >
              <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <img src={segment.icon} alt="" class="w-4 h-4" />
              </div>
              <div>
                <div class="font-medium text-gray-900">{segment.title}</div>
                <div class="text-sm text-gray-600">{segment.description}</div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Features -->
      <div>
        <div class="text-sm font-medium text-gray-500 tracking-wider mb-3">Features</div>
        <div class="space-y-4">
          {navigationData.featureGroups.map((group) => (
            <div>
              <div class="text-sm font-medium text-gray-700 mb-2">{group.title}</div>
              <div class="space-y-2 ml-4">
                {group.features.map((feature) => (
                  <a 
                    href={feature.href} 
                    class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
                  >
                    <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <img src={feature.icon} alt="" class="w-4 h-4" />
                    </div>
                    <div>
                      <div class="font-medium text-gray-900">{feature.title}</div>
                      <div class="text-sm text-gray-600">{feature.description}</div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Mobile Resources -->
      <div>
        <div class="text-sm font-medium text-gray-500 tracking-wider mb-3">Learning</div>
        <div class="space-y-2">
          {navigationData.resources.learning.map((resource) => (
            <a 
              href={resource.href} 
              class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
            >
              <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <img src={resource.icon} alt="" class="w-4 h-4" />
              </div>
              <div>
                <div class="font-medium text-gray-900">{resource.title}</div>
                <div class="text-sm text-gray-600">{resource.description}</div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Company -->
      <div>
        <div class="text-sm font-medium text-gray-500 tracking-wider mb-3">Company</div>
        <div class="space-y-2">
          {navigationData.resources.company.map((item) => (
            <a 
              href={item.href} 
              class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition-colors"
            >
              <div class="w-8 h-8 bg-investipal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <img src={item.icon} alt="" class="w-4 h-4" />
              </div>
              <div>
                <div class="font-medium text-gray-900">{item.title}</div>
                <div class="text-sm text-gray-600">{item.description}</div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Links -->
      <div class="pt-4 border-t border-gray-200">
        <a href="/contact-us" class="block py-2 text-gray-700 hover:text-gray-900 font-medium">
          Contact us
        </a>
        <a href="https://app.investipal.co/" class="block py-2 text-gray-700 hover:text-gray-900 font-medium">
          Log in
        </a>
        <div class="mt-4">
          <StandardButton size="small" className="w-full text-center">Schedule a Demo</StandardButton>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as Node;
    if (mobileMenu && target && !mobileMenu.contains(target) && !mobileMenuButton?.contains(target)) {
      mobileMenu.classList.add('hidden');
    }
  });
</script>
