---
import { featuresData } from '../../data/featuresData';
---

<section class="bg-white box-border">
  <div class="box-border px-4 md:px-8">
    <div class="box-border max-w-screen-xl w-full mx-auto">
      <div class="box-border py-16">
        <div class="text-center box-border mb-16">
          <h2 class="text-black text-3xl font-semibold box-border leading-[43.2px] font-system_ui">
            Everything financial advisors need in one platform
          </h2>
          <div class="box-border max-w-[600px] w-full mx-auto mt-6">
            <p class="text-slate-600 text-lg box-border leading-[27px] font-system_ui">
              From automated client onboarding to multi-asset portfolio construction to compliance documentationâ€”streamline your entire workflow and grow your practice.
            </p>
          </div>
        </div>
        
        <div class="box-border space-y-16">
          {featuresData.map((feature, index) => (
            <div class={`box-border items-center gap-x-12 grid grid-cols-1 ${index % 2 === 1 ? 'md:grid-cols-[1fr_1fr]' : 'md:grid-cols-[1fr_1fr]'}`}>
              <div class={`box-border ${index % 2 === 1 ? 'md:order-2' : ''}`}>
                <div class="text-violet-600 text-sm font-medium box-border mb-3 font-system_ui">
                  {feature.badge}
                </div>
                <h3 class="text-black text-2xl font-semibold box-border mb-4 font-system_ui">
                  {feature.title}
                </h3>
                <p class="text-slate-600 text-lg box-border leading-[27px] font-system_ui">
                  {feature.description}
                </p>
              </div>
              <div class={`box-border ${index % 2 === 1 ? 'md:order-1' : ''}`}>
                <img 
                  src={feature.image} 
                  alt={feature.title} 
                  class="box-border w-full rounded-lg shadow-lg"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
