---
// CTASection component (Design System compliant)
import StandardButton from '../ui/StandardButton.astro';
import { designSystem } from '../../data/designSystem';

export interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title = 'See Investipal in Action',
  subtitle = "Curious how Investipal can help accelerate your firm's growth? Chat with one of our solution experts.",
  ctaText = 'Schedule a Demo',
  ctaHref = '/book-a-demo'
} = Astro.props as Props;
---

<section class={`relative ${designSystem.spacing.section}`}>
  <div class={`relative ${designSystem.spacing.container}`}>
    <div class="relative bg-gradient-to-br from-investipal-600 via-investipal-700 to-investipal-800 rounded-2xl lg:rounded-3xl p-8 lg:p-12 xl:p-16 overflow-hidden text-center">
      <!-- Decorative gradient glows -->
      <div class="absolute inset-0 bg-gradient-to-r from-investipal-600/20 to-transparent"></div>
      <div class="absolute top-0 right-0 w-96 h-96 bg-investipal-500/10 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-investipal-400/10 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>

      <div class="relative max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{title}</h2>
        <p class="text-lg md:text-xl text-investipal-100 mb-8">{subtitle}</p>
        <StandardButton href={ctaHref} variant="white">{ctaText}</StandardButton>
      </div>
    </div>
  </div>
</section>
