---
import { companyLogos } from '../../data/companyData';
---

<section class="bg-white border-t border-gray-100 py-8 md:py-12">
  <div class="max-w-6xl mx-auto px-4 md:px-8">
    <div class="text-center space-y-6">
      <div>
        <h2 class="text-base md:text-lg font-semibold text-gray-900 font-system_ui">
          Trusted by advisory firms across North America
        </h2>
      </div>
      
      <div class="flex flex-wrap justify-center items-center gap-6 md:gap-8 lg:gap-10 max-w-4xl mx-auto opacity-70">
        {companyLogos.map((logo) => (
          <div class="group">
            <img 

              src={logo.src} 
              alt={logo.alt} 
              class={`h-6 md:h-8 w-auto filter grayscale group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300 ${logo.id === 'pacific' ? 'max-w-[160px] object-contain' : ''}`}
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
