{
  "name": "investipal-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "audit": "node audit-script.cjs",
    "audit:lighthouse": "lighthouse http://localhost:4321 --output html --output-path lighthouse-report.html --chrome-flags=\"--headless\"",
    "audit:pa11y": "pa11y http://localhost:4321",
    "audit:check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "fix:blog-links": "node --experimental-modules scripts/fix-blog-links.mjs",
    "crawl:blog": "npx linkinator http://localhost:4324/blog --recurse --concurrency 6 --timeout 20000 --skip 'mailto:,tel:,facebook.com/sharer,twitter.com/intent' --format json > reports/crawl_blog.json",
    "audit:semantic": "node --experimental-modules scripts/semantic-link-audit.mjs",
    "fix:semantic-links": "node --experimental-modules scripts/semantic-link-fix.mjs"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.0",
    "@tailwindcss/vite": "^4.1.12",
    "astro": "^5.13.2",
    "astro-expressive-code": "^0.41.3",
    "astro-icon": "^1.1.5",
    "astro-seo": "^0.8.4",
    "cheerio": "^1.1.2",
    "cssesc": "^3.0.0",
    "csv-parse": "^6.1.0",
    "he": "^1.2.0",
    "jsdom": "^26.1.0",
    "node-html-markdown": "^1.3.0",
    "papaparse": "^5.5.3",
    "sharp": "^0.34.3",
    "turndown": "^7.2.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "lighthouse": "^12.8.1",
    "pa11y": "^9.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "tailwindcss": "^4.1.12",
    "terser": "^5.43.1"
  }
}
