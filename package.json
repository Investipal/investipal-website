{
  "name": "investipal-website-staging",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:report": "astro build && node scripts/url-parity-audit.mjs --prod https://investipal.co/sitemap-index.xml --staging dist/sitemap-index.xml --out reports",
    "preview": "astro preview",
    "astro": "astro",
    "audit": "node scripts/run-comprehensive-audit.mjs",
    "audit:lighthouse": "lighthouse http://localhost:4321 --output html --output-path lighthouse-report.html --chrome-flags=\"--headless\"",
    "audit:pa11y": "pa11y http://localhost:4321",
    "audit:check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "verify:posts": "node scripts/seo/verify-posts.mjs",
    "fix:blog-links": "node --experimental-modules scripts/fix-blog-links.mjs",
    "crawl:blog": "npx linkinator http://localhost:4324/blog --recurse --concurrency 6 --timeout 20000 --skip 'mailto:,tel:,facebook.com/sharer,twitter.com/intent' --format json > reports/crawl_blog.json",
    "audit:semantic": "node --experimental-modules scripts/semantic-link-audit.mjs",
    "fix:semantic-links": "node --experimental-modules scripts/semantic-link-fix.mjs",
    "audit:parity": "node scripts/url-parity-audit.mjs --prod https://investipal.co/sitemap-index.xml --staging dist/sitemap-index.xml --out reports",
    "audit:redirects": "node scripts/redirect-check.mjs --map redirect_map.csv",
    "redirects:port": "node scripts/port-astro-redirects-to-swa.mjs",
    "optimize:images": "node scripts/optimize-images.mjs",
    "lint": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\""
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/partytown": "^2.0.2",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "astro": "^5.14.1",
    "astro-compress": "^2.0.15",
    "astro-themes": "^0.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "jsdom": "^22.1.0",
    "lucide-react": "^0.544.0",
    "marked": "^9.0.0",
    "motion": "^12.23.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "@types/react": "^19.1.17",
    "@types/react-dom": "^19.1.11",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "lighthouse": "^13.0.1",
    "pa11y": "^9.0.1",
    "pa11y-reporter-json": "^2.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  }
}
