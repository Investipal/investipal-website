{
  "name": "investipal-website-staging",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:report": "astro build && node scripts/url-parity-audit.mjs --prod https://investipal.co/sitemap-index.xml --staging dist/sitemap-index.xml --out reports",
    "preview": "astro preview",
    "astro": "astro",
    "audit:lighthouse": "lighthouse http://localhost:4321 --output html --output-path lighthouse-report.html --chrome-flags=\"--headless\"",
    "audit:pa11y": "pa11y http://localhost:4321",
    "audit:check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "fix:blog-links": "node --experimental-modules scripts/fix-blog-links.mjs",
    "crawl:blog": "npx linkinator http://localhost:4324/blog --recurse --concurrency 6 --timeout 20000 --skip 'mailto:,tel:,facebook.com/sharer,twitter.com/intent' --format json > reports/crawl_blog.json",
    "audit:semantic": "node --experimental-modules scripts/semantic-link-audit.mjs",
    "fix:semantic-links": "node --experimental-modules scripts/semantic-link-fix.mjs",
    "audit:parity": "node scripts/url-parity-audit.mjs --prod https://investipal.co/sitemap-index.xml --staging dist/sitemap-index.xml --out reports",
    "audit:redirects": "node scripts/redirect-check.mjs --map redirect_map.csv",
    "redirects:port": "node scripts/port-astro-redirects-to-swa.mjs"
  },
  "dependencies": {
    "@astrojs/mdx": "^1.1.5",
    "@astrojs/partytown": "^2.0.2",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "5.0.2",
    "@tailwindcss/vite": "^4.0.0",
    "astro-compress": "^2.0.15",
    "jsdom": "^22.1.0",
    "marked": "^9.0.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "astro": "^3.6.5"
  }
}
